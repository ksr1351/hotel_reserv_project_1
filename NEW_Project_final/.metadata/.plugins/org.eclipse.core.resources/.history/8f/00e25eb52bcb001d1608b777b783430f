<script>
	$(function(){
		
		$('#apibtn').click(function(){
			$.ajax({
				url: '/pay/kakaopay',
				dataType:'json',
				success:function(data){
					//alert(date.tid);
					
					var box = data.next_redirect_pc_url;
					window.open(box);
				},
				
				error:function(error){
					alert(error);
				}
				
				
				
			});
		});
	});
